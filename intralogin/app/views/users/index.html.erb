
  <% if current_user.otp_required_for_login? && !user_session["otp_done"] %>
    <%= render "otp_auth/otp_auth"  %>
  <% end %>
  
  <% if !current_user.otp_required_for_login? || user_session["otp_done"] %>
    <%= link_to "Sign in with 42", user_marvin_omniauth_authorize_path, :method => :post%>
    <br>
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <br>
    <img src="<%= current_user.avatar_url %>" width ="200"/>
    <%= current_user.name %>
    <%= current_user.avatar_url %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-3 rooms-sidebar">
          <div class="card no-outline">
            <div class="card-body">
              <small>Logged in as</small><br>
              <b><%= current_user.name %><br></b>
              <br><b>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-info" %>
              </b>
            </div>
          </div>
           <%= render 'friends/friend' %>
           <%= render 'users/list' %>
        </div>
    </div>
</div>
  <% end %>
