<div class="card">
  <div class="card-header">Two Factor Authentication</div>
  <div class="card-body">
    <% @user = current_user %>
    <%= simple_form_for(@user, url: otp_auth_path, method: :post) do |f| %>
      <%= f.input :otp_attempt, label: 'OTP' %>
      <div class="actions">
        <%= f.submit 'Login', class: 'btn btn-primary mt-2' %>
      </div>
    <% end %>
  </div>
</div>
