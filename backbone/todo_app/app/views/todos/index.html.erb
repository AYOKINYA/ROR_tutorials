<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.order %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>

<h2>============</h2>

<%= javascript_pack_tag 'greeting' %>
<button id="greet-user-button">Hey!</button>
<br/>

<h2>============</h2>
<%= javascript_pack_tag 'todos' %>

<div id="todos-app">
<ul class="todos-list"></ul>

  <div class="todo-create">
    <b>Add a Todo</b>
    <label>Title: <input id="todo-title" type="text"></label>
    <label>Order: <input id="todo-order" type="text"></label>
    <button class="create">Create Todo!</button>
  </div>
</div>

<script type="text/template" id="todo-item-tmpl">
  <p>Title: <i><%= @title %></i></p>
  <p>Order: <i>{order}</i></p>
  <button class="remove">x</button>
</script>
